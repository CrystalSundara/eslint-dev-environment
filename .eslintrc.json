{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": ["warn", "always"],
		"quotes": ["error", "double"],
		"no-unused-vars": [
			"off",
			{ "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
		],
		"prettier/prettier": "error"
	}
}
